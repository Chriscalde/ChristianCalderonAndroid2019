<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="DIALOGO 2.0"
            android:layout_width="220dp"
            android:layout_height="61dp"
            android:id="@+id/btnDialogTwo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btnShow" android:background="#2196F3"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="TIME FIGHTER"
            android:layout_width="220dp"
            android:layout_height="61dp"
            android:id="@+id/btnTimeFighter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="124dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHelloWorld" android:background="#2196F3"
            app:layout_constraintHorizontal_bias="0.502"/>
    <Button
            android:text="DIALOGO"
            android:layout_width="220dp"
            android:layout_height="61dp"
            android:id="@+id/btnShow" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTimeFighter" android:background="#2196F3"
            app:layout_constraintHorizontal_bias="0.502"/>
    <Button
            android:text="FAHRENHEIT TO CELSIUS"
            android:layout_width="220dp"
            android:layout_height="61dp"
            android:id="@+id/btnConvert" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHelloWorld" android:background="#2196F3"
            app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:text="Android 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="20dp" android:textStyle="bold"/>
    <Button
            android:text="HELLOW WORLD"
            android:layout_width="220dp"
            android:layout_height="61dp"
            android:id="@+id/btnHelloWorld" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:background="#2196F3"
            app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:text="Christian Calderon / Chriscalde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>